{
  "version": 2,
  "builds": [
    {
      "src": "requirements.txt",
      "use": "@vercel/python"
    },
    {
      "src": "api/predict/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "model.joblib",
          "preprocessor.joblib"
        ],
        "excludeFiles": "{**/*,.next,*.cache,node_modules,public,app}/**"
      }
    }
  ]
}